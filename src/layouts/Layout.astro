---
import HTMLHeader from "@components/HTMLHeader.astro";
import HTMLFooter from "@components/HTMLFooter.astro";
// import "@css/tufte.css";
// import "@css/latex.css";
// import "@css/custom.css";

import "@css/reset.css";
import "@css/shared.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <HTMLHeader title={title} />

  <body>
    <slot name="header" />
    <main>
      <slot />
    </main>
    <HTMLFooter />
  </body>
</html>

<style>
  main {
    margin-top: var(--main-margin-extra);
  }
</style>
