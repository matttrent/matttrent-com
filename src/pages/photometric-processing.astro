---
import Page from "../layouts/Page.astro";
import MarginNote from "../components/MarginNote.astro";

import * as photoProcess from "./photometric-processing.md";
import { Content } from "./photometric-processing.md";
---

<Page title={photoProcess.frontmatter.title}>
  <figure>
    <img
      src="/attachments/research/photometric-processing-1.png"
      alt=""
      width="32%"
    />
    <img
      src="/attachments/research/photometric-processing-2.png"
      alt=""
      width="32%"
    />
    <img
      src="/attachments/research/photometric-processing-3.png"
      alt=""
      width="32%"
    />
    <MarginNote
      name="caption"
      text="Left: original HDR image, tone mapped for display.  Center: high contrast, low frequency image representing the LED backlight.  Right: LCD image corresponding to backlight.  The combination of the backlight and LCD image will reconstruct the original image."
    />
  </figure>

  <Content />
</Page>
