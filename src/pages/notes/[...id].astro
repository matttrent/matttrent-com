---
import NotesLayout from "@layouts/NotesLayout.astro";
import { getCollection, render } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { isPublished } from "@utils/content";

type Note = CollectionEntry<"notes">;

type Props = {
  entry: Note;
};

// Generate a new path for every collection entry
export async function getStaticPaths() {
  // Get published (non-draft) notes
  const noteEntries = await getCollection("notes", isPublished);

  return noteEntries.map((entry: Note) => ({
    params: { id: entry.id },
    props: { entry },
  }));
}

// Get the entry directly from the prop
const { entry } = Astro.props;
const { Content } = await render(entry);

// Build title with draft indicator
const title = entry.data.title + (entry.data.isDraft ? " (draft)" : "");
---

<NotesLayout title={title} content={entry.data}>
  <Content />
</NotesLayout>
