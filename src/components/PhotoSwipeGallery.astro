---
import { Image, getImage } from "astro:assets";
import type { ImageMetadata } from "astro";
import 'photoswipe/style.css';

interface Props {
  images: {
    src: ImageMetadata;
    alt: string;
    title?: string;
  }[];
  galleryId: string;
  columns?: number;
}

const { images, galleryId, columns = 3 } = Astro.props;

// Generate full-size image data for PhotoSwipe lightbox
const fullsizeData = await Promise.all(
  images.map(async ({ src, alt, title }) => {
    // Full-size for lightbox (1600px max, or original if smaller)
    const fullsize = await getImage({
      src,
      width: Math.min(src.width, 1600),
      format: 'webp',
    });

    return {
      src,
      alt,
      title,
      fullsizeSrc: fullsize.src,
      fullsizeWidth: fullsize.attributes.width,
      fullsizeHeight: fullsize.attributes.height,
    };
  })
);
---

<div class="photoswipe-gallery" id={`gallery-${galleryId}`}>
  <div class="gallery-grid" data-pswp-gallery={galleryId}>
    {
      fullsizeData.map(({ src, alt, title, fullsizeSrc, fullsizeWidth, fullsizeHeight }) => (
        <a
          href={fullsizeSrc}
          data-pswp-width={fullsizeWidth}
          data-pswp-height={fullsizeHeight}
          target="_blank"
          rel="noreferrer"
        >
          <Image
            src={src}
            alt={alt}
            widths={[400, 600, 800]}
            sizes="(max-width: 500px) 100vw, (max-width: 760px) 50vw, 400px"
            loading="lazy"
          />
          {title && <span class="hidden-caption">{title}</span>}
        </a>
      ))
    }
  </div>
</div>

<style define:vars={{ columns }}>
  .photoswipe-gallery {
    width: 100%;
    margin: 2rem 0;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(var(--columns), 1fr);
    gap: 0.5rem;
    width: 100%;
  }

  .gallery-grid a {
    display: block;
    position: relative;
    overflow: hidden;
    cursor: pointer;
    line-height: 0;
  }

  .gallery-grid a:hover {
    opacity: 0.9;
  }

  /* Target both direct img and img within picture element */
  .gallery-grid a :global(img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    aspect-ratio: 3 / 2;
    transition: transform 0.2s ease;
  }

  .gallery-grid a:hover :global(img) {
    transform: scale(1.05);
  }

  .hidden-caption {
    display: none;
  }

  /* Responsive: 2 columns on tablets, 1 column on mobile */
  @media (max-width: 760px) {
    .gallery-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 500px) {
    .gallery-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
