---
import "../css/shared.css";
---

<article class="gridContainer">
  <slot />
</article>

<style is:global>
  article {
  }

  article > *,
  article > section > * {
    grid-column: text-start / text-end;
  }

  /* section is not currently used in layouts.  
  but if reintroduced, this will preserve the grid */
  section {
    display: contents;
  }

  article h1 {
    font-weight: 400;
    margin-top: 4rem;
    margin-bottom: 1.5rem;
    font-size: 3.2rem;
    line-height: 1;
  }

  article h2 {
    font-style: italic;
    font-weight: 400;
    margin-top: 2.1rem;
    margin-bottom: 1.4rem;
    font-size: 2.2rem;
    line-height: 1;
  }

  article h2.newsection {
    margin-top: 4.1rem;
  }

  article h3 {
    font-style: italic;
    font-weight: 400;
    font-size: 1.7rem;
    margin-top: 2rem;
    margin-bottom: 1.4rem;
    line-height: 1;
  }

  article hr {
    display: block;
    height: 1px;
    width: 100%;
    border: 0;
    border-top: 1px solid #ccc;
    margin: 1em 0;
    padding: 0;
  }

  article section {
    padding-top: 1rem;
    padding-bottom: 1rem;
  }

  article p {
    font-size: 1.4rem;
    line-height: 2rem;
    margin-bottom: 1.4rem;
    padding-right: 0;
    vertical-align: baseline;
  }

  article ol,
  article ul {
    font-size: 1.4rem;
    line-height: 2rem;
  }

  article li:not(:first-child) {
    margin-top: 0.25rem;
  }

  article .sans {
    font-family: var(--sans-fonts);
    letter-spacing: 0.03em;
  }

  article code {
    font-family: var(--mono-fonts);
    font-size: 1rem;
    line-height: 1.42;
  }

  article .sans > code {
    font-size: 1.2rem;
  }

  article h1 > code,
  article h2 > code,
  article h3 > code {
    font-size: 0.8em;
  }

  article pre.code {
    font-size: 0.9rem;
    margin-left: 2.5%;
    margin-right: 2.5%;
    overflow-x: auto;
  }
</style>
