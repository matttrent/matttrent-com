---
import "../css/shared.css";
---

<article class="gridContainer">
  <slot />
</article>

<style is:global>
  article > * {
    grid-column: text-start / text-end;
  }

  article {

  }

  h1 {
    font-weight: 400;
    margin-top: 4rem;
    margin-bottom: 1.5rem;
    font-size: 3.2rem;
    line-height: 1;
  }

  h2 {
    font-style: italic;
    font-weight: 400;
    margin-top: 2.1rem;
    margin-bottom: 1.4rem;
    font-size: 2.2rem;
    line-height: 1;
  }

  h3 {
    font-style: italic;
    font-weight: 400;
    font-size: 1.7rem;
    margin-top: 2rem;
    margin-bottom: 1.4rem;
    line-height: 1;
  }

  hr {
    display: block;
    height: 1px;
    width: 100%;
    border: 0;
    border-top: 1px solid #ccc;
    margin: 1em 0;
    padding: 0;
  }

  section {
    padding-top: 1rem;
    padding-bottom: 1rem;
  }

  p {
    font-size: 1.4rem;
    line-height: 2rem;
    /* margin-top: 1.4rem; */
    margin-bottom: 1.4rem;
    padding-right: 0;
    vertical-align: baseline;
  }

  ol,
  ul {
    font-size: 1.4rem;
    line-height: 2rem;
  }

  li:not(:first-child) {
    margin-top: 0.25rem;
  }
</style>
