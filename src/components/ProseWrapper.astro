---
import "../css/shared.css";
---

<article class="gridContainer">
  <slot />
</article>

<style is:global>
  article > * {
    grid-column: text-start / text-end;
  }

  article {
    font-size: 1.4rem;
    line-height: 2rem;
  }

  h1 {
    font-weight: 400;
    margin-top: 4rem;
    margin-bottom: 1.5rem;
    font-size: 3.2rem;
    line-height: 1;
  }

  h2 {
    font-style: italic;
    font-weight: 400;
    margin-top: 2.1rem;
    margin-bottom: 0;
    font-size: 2.2rem;
    line-height: 1;
  }

  h3 {
    font-style: italic;
    font-weight: 400;
    font-size: 1.7rem;
    margin-top: 2rem;
    margin-bottom: 0;
    line-height: 1;
  }
</style>
