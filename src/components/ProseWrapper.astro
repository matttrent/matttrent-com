---
// import "@css/shared.css";
---

<article class="gridContainer">
  <slot />
</article>

<style is:global>
  article {
  }

  article > *,
  article > section > * {
    grid-column: text-start / text-end;
  }

  @media (max-width: 760px) {
    article > *,
    article > section > * {
      grid-column: page-start / page-end;
    }
  }

  /* section is not currently used in layouts.  
  but if reintroduced, this will preserve the grid */
  article section {
    display: contents;
  }

  article h2,
  article h3,
  article p,
  article ol,
  article ul,
  article dl,
  article blockquote,
  article pre {
    margin-bottom: 1.4rem;
  }

  article h1 {
    font-weight: 400;
    margin-top: 4rem;
    margin-bottom: 1.5rem;
    font-size: 3.2rem;
    line-height: 1;
  }

  article h2 {
    font-style: italic;
    font-weight: 400;
    margin-top: var(--prose-h2-margin);
    /* margin-bottom: 1.4rem; */
    font-size: 2.2rem;
    line-height: 1;
  }

  article h2:not(:first-child),
  article h2.newsection {
    margin-top: calc(var(--prose-h2-margin) + var(--prose-h2-margin-extra));
  }

  article h3 {
    font-style: italic;
    font-weight: 400;
    font-size: 1.7rem;
    margin-top: 0.6rem;
    /* margin-bottom: 1.4rem; */
    line-height: 1;
  }

  article hr {
    display: block;
    height: 1px;
    width: 100%;
    border: 0;
    border-top: 1px solid #ccc;
    margin: 1em 0;
    padding: 0;
  }

  article p {
    font-size: 1.4rem;
    line-height: 2rem;
    /* margin-bottom: 1.4rem; */
    padding-right: 0;
    vertical-align: baseline;
  }

  article ol,
  article ul,
  article dl {
    font-size: 1.4rem;
    line-height: 2rem;
  }

  /* Commenting out spacing for definition list for now */
  article dt:not(:first-of-type),
  article dd:not(:first-of-type),
  article li:not(:first-child) {
    padding-top: 0.25rem;
  }

  article blockquote {
    font-size: 1.4rem;
  }

  article blockquote p {
    padding-left: 40px;
  }

  article blockquote footer {
    font-size: 1.1rem;
    text-align: right;
  }

  article .sans {
    font-family: var(--sans-fonts);
    letter-spacing: 0.03em;
  }

  article code,
  article pre > code {
    font-family: var(--mono-fonts);
    font-size: 1rem;
    line-height: 1.42;
    /* Prevent adjustments of font size after orientation changes in iOS. See https://github.com/edwardtufte/tufte-css/issues/81#issuecomment-261953409 */
    -webkit-text-size-adjust: 100%;
  }

  article .sans > code {
    font-size: 1.2rem;
  }

  article h1 > code,
  article h2 > code,
  article h3 > code {
    font-size: 0.8em;
  }

  article pre > code {
    font-size: 0.9rem;
    margin-left: 2.5rem;
    overflow-x: auto;
    display: block;
  }

  article .kickout-left {
    grid-column: left-kickout / text-end;
  }

  article .kickout-right {
    grid-column: text-start / right-kickout;
  }

  article .kickout-both {
    grid-column: left-kickout / right-kickout;
  }

  article .iframe-wrapper {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 */
    padding-top: 25px;
    height: 0;
  }

  article .iframe-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>
