---
import "../css/shared.css";

interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="gridContainer">
  <header>
    <h1>{title}</h1>
    {subtitle && <h2 class="subtitle">{subtitle}</h2>}
  </header>
</div>

<style>
  header {
    padding-top: 5rem;
    padding-bottom: 1rem;
    grid-column: text-start / margin-end;
  }

  h1 {
    font-weight: 400;
    margin-top: 4rem;
    margin-bottom: 1.5rem;
    font-size: 3.2rem;
    line-height: 1;
    font-family: et-book, Palatino, "Palatino Linotype", "Palatino LT STD",
      "Book Antiqua", Georgia, serif;
  }

  h2 {
    font-style: italic;
    margin-top: 1rem;
    margin-bottom: 1rem;
    font-size: 1.8rem;
    display: block;
    line-height: 1;
    font-family: et-book, Palatino, "Palatino Linotype", "Palatino LT STD",
      "Book Antiqua", Georgia, serif;
  }
</style>
