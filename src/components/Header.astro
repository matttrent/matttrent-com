---
import "../css/shared.css";

interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="gridContainer">
  <nav>
    <a href="/">MT</a>
  </nav>
  <header>
    <h1>{title}</h1>
    {subtitle && <h2 class="subtitle">{subtitle}</h2>}
  </header>
  <div class="extra">
    <slot />
  </div>
</div>

<style>
  nav {
    grid-column: 1 / 13;

    padding: 1.5rem;

    font-size: 1.4rem;
    font-family: "Gill Sans", "Gill Sans MT", Calibri, sans-serif;

    a {
      text-decoration: none;
      background: none !important; /* Override the gradient background */
      text-shadow: none !important; /* Remove text shadow */
    }
  }

  header {
    padding-top: 2rem;
    padding-bottom: 1rem;
    grid-column: text-start / margin-end;
  }

  .extra {
    grid-column: text-start / text-end;
  }

  @media (max-width: 760px) {
    header {
      grid-column: page-start / page-end;
    }

    .extra {
      grid-column: page-start / page-end;
    }
  }

  h1 {
    font-weight: 400;
    margin-top: 4rem;
    margin-bottom: 1.5rem;
    font-size: 3.2rem;
    line-height: 1;
    font-family: et-book, Palatino, "Palatino Linotype", "Palatino LT STD",
      "Book Antiqua", Georgia, serif;
  }

  h2 {
    font-style: italic;
    margin-top: 1rem;
    margin-bottom: 1rem;
    font-size: 1.8rem;
    display: block;
    line-height: 1;
    font-family: et-book, Palatino, "Palatino Linotype", "Palatino LT STD",
      "Book Antiqua", Georgia, serif;
  }
  
</style>
