---
import BaseFigure from "@components/BaseFigure.astro";

interface Props {
  layout?: "normal" | "full";
}

const { layout = "normal" } = Astro.props;
---

<BaseFigure layout={layout} className="CustomFigure">
  <slot />
  {layout === "normal" && <slot name="sidenote" />}
  <slot name="figcaption" />
</BaseFigure>
