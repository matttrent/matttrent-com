---
import { groupAndSortByDate } from "@utils/dateGrouping";

export interface CVItem {
  dates: string;
  id?: string;
  subject: string;
  description: string;
}

interface Props {
  items: CVItem[];
}

const { items } = Astro.props;
const sortedDateGroups = groupAndSortByDate(items, {
  groupKey: (item) => item.dates.split("-")[0],
  displayKey: (item) => item.dates,
});
---

<dl class="dl-horizontal">
  {
    sortedDateGroups.map(([dates, items]) => (
      <>
        <dt>{dates}</dt>
        {items.map((item) => (
          <>
            <dd id={item.id} set:html={item.subject} />
            <dd class="dl-small-text" set:html={item.description} />
          </>
        ))}
      </>
    ))
  }
</dl>

<style>
  dl {
    font-size: 1.4rem;
    line-height: 1.2em;
    -webkit-padding-end: 5%;
  }

  dt,
  dd {
    padding: 0.5rem 0;
  }

  dt {
  }

  dd {
    margin-left: 0;
  }

  .dl-horizontal dt {
    float: left;
    width: 6rem;
    overflow: hidden;
    clear: left;
    text-align: right;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 1.2rem;
  }
  .dl-horizontal dd {
    margin-left: 7.333rem;
  }

  .dl-horizontal-wide dt {
    float: left;
    width: 80px; /* custom, orig 160px */
    overflow: hidden;
    clear: left;
    text-align: right;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 1.2rem; /* custom, added */
  }

  .dl-horizontal-wide dd {
    margin-left: 100px; /* custom, orig 180px */
  }

  .dl-small-text {
    font-size: 1.2rem;
  }

  dl dt {
    font-family: "Gill Sans", "Gill Sans MT", Calibri, sans-serif;
  }

  @media screen and (max-width: 760px) {
    .dl-horizontal dt {
      text-align: left;
      display: inline;
    }
    .dl-horizontal dd {
      clear: left;
      margin-left: 0px;
    }
  }

</style>
