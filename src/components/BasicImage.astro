---
import { Image } from "astro:assets";

interface Props {
  src: ImageMetadata;
  alt: string;
  fullwidth?: boolean;
  [key: string]: any;
}

const { fullwidth = false, ...props } = Astro.props;
---

<figure class:list={[{ fullwidth }]}>
  <Image {...props} class="responsive-image" />
  {!fullwidth && <slot name="sidenote" />}
  <slot />
</figure>

<style>
  figure {
    padding: 0;
    border: 0;
    font-size: 100%;
    font: inherit;
    vertical-align: baseline;
    -webkit-margin-start: 0;
    -webkit-margin-end: 0;
    margin: 0 0 3em 0;
  }

  figure.fullwidth {
    grid-column: text-start / margin-end;
  }

  @media (max-width: 760px) {
    figure.fullwidth {
      grid-column: page-start / page-end;
    }
  }

  .responsive-image {
    height: auto;
    aspect-ratio: attr(width) / attr(height);
    object-fit: cover;
    width: 100%;
  }

  :global(article > figure > figcaption) {
    float: right;
    clear: right;
    margin-top: 0;
    margin-bottom: 0;
    font-size: 1.1rem;
    line-height: 1.6;
    vertical-align: baseline;
    position: relative;
    max-width: calc(4/7 * 100%);
  }
</style>
