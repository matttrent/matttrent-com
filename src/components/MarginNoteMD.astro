---
interface Props {
  name: string;
}

const { name } = Astro.props;
---

<div class="sidenote-container">
  <div class="sidenote-content">
    <slot name="sidenote" />
  </div>
  <div class="main-content">
    <slot />
  </div>
</div>

<style>
  .sidenote-container {
    position: relative;
  }

  .sidenote-content {
    position: absolute;
    float: right;
    clear: right;
  }

  .main-content {
    position: relative;
    width: 100%;
  }
</style>
