---
interface Props {
  name: string;
}

const { name } = Astro.props;
---

<label for={`mn-${name}`} class="margin-toggle">&#8853;</label>
<input type="checkbox" id={`mn-${name}`} class="margin-toggle" />
<span class="marginnote">
  <slot />
</span>

<style is:global>
  /* set <p> styling to be the same as marginnote styling, to handle marginnotes generated
    by MDX that will be wrapped in <p> */
  span.marginnote > p {
    font-size: 1.1rem;
    line-height: 1.3;
  }
</style>
